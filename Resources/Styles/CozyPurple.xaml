<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CozyPlayer.Resources.Styles.CozyPurple">

    <!-- Background image for this theme -->
    <FileImageSource x:Key="BackgroundImage" File="purple.jpg"/>

    <!-- Color palette -->
    <Color x:Key="BackgroundColor">#F6F2FB</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="PrimaryColor">#7C4DFF</Color>
    <Color x:Key="AccentColor">#C7A4FF</Color>
    <Color x:Key="TextColor">#2D114B</Color>

    <!-- Label style -->
    <Style x:Key="TitleLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="AboveDemo"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <!-- Buttons -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="AboveDemo"/>
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,8" />
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="AboveDemo"/>
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="10,6" />
    </Style>

    <!-- Cards -->
    <Style x:Key="CardFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

</ResourceDictionary>
