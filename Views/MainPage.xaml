<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CozyPlayer.Views.MainPage">

    <VerticalStackLayout Padding="10">

        <Label Text="CozyPlayer 🎵" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,10"/>

        <CollectionView x:Name="TracksCollection"
                        ItemsSource="{Binding Tracks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="LightGray">
                        <Grid>
                            <Grid.GestureRecognizers>
                                <DragGestureRecognizer DragStarting="OnDragStarting"/>
                                <DropGestureRecognizer Drop="OnDrop"/>
                            </Grid.GestureRecognizers>

                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                <Label Text="{Binding Title}" FontAttributes="Bold" WidthRequest="150"/>
                                <Button Text="▶" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.PlayCommand}" CommandParameter="{Binding}" Margin="5,0"/>
                                <Button Text="🗑" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}" CommandParameter="{Binding}" Margin="5,0"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
